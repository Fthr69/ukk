<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/inosuke">

    <TextView
        android:id="@+id/tvSol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="32sp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64sp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_below="@id/tvSol"
        android:layout_margin="16dp"/>

    <LinearLayout
        android:id="@+id/buttonLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginLeft="15dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="1"
            android:layout_margin="8dp">

            <Button
                android:id="@+id/btnSmdg"
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:text="="
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#B9B9B9"/>

            <Button
                android:id="@+id/btnC"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="C"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#B8B8B8"/>

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_margin="8dp">

            <Button
                android:id="@+id/btn7"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="7"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="@color/black"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="8"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="@color/black"/>

            <Button
                android:id="@+id/btn9"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="9"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="@color/black"/>

            <Button
                android:id="@+id/btnKali"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="*"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9100"/>

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_margin="8dp">

            <Button
                android:id="@+id/btn4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="4"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="@color/black"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="5"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="@color/black"/>

            <Button
                android:id="@+id/btn6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="6"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="@color/black"/>

            <Button
                android:id="@+id/btnTambah"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="+"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9100"/>

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_margin="8dp">

            <Button
                android:id="@+id/btn1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="1"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="@color/black"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="2"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="@color/black"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="3"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="@color/black"/>

            <Button
                android:id="@+id/btnKurang"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="-"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9100"/>

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_margin="8dp">

            <Button
                android:id="@+id/btn0"
                android:layout_width="165dp"
                android:layout_height="75dp"
                android:text="0"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="@color/black"/>

            <Button
                android:id="@+id/btnTitik"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="."
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#B9B9B9"/>

            <Button
                android:id="@+id/btnBagi"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="/"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9100"/>

        </GridLayout>

    </LinearLayout>

</RelativeLayout>
